{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "incremental": true,
    "noUnusedLocals": true,
    "paths": {
      "@entities/*": ["src/entities/*"],
      "@modules/*": ["src/modules/*"],
      "@types/*": ["src/types/*"],
      "@/*": ["src/*"]
    },
    "noImplicitAny": true
  },
  "exclude": ["node_modules", "dist"]
}
